{
  "files.exclude": {
    ".git/": true,
    "node_modules/": false,
    "dist/": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/public": true
  },
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "[json]": {
    "editor.formatOnSave": false
  },
  "typescript.tsdk": "./node_modules/typescript/lib",
  "eslint.enable": false,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [{
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "javascriptreact",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
}
